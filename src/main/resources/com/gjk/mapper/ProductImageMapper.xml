<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gjk.mapper.ProductImageMapper">
    <sql id="table_name">productimage</sql>
    <select id="getProductImageByPid" resultType="com.gjk.pojo.ProductImage">
      select id, pid, type from
      <include refid="table_name"/>
      where pid=#{pid}
    </select>
</mapper>